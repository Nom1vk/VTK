#ifndef _ftglConfig_h
#define _ftglConfig_h

/*
  Do not use the STL (portability issue)
*/
#cmakedefine VTKFTGLES_DO_NOT_USE_STL
#if defined(VTKFTGLES_DO_NOT_USE_STL) && !defined(FTGLES_DO_NOT_USE_STL)
#define FTGLES_DO_NOT_USE_STL
#endif

/*
  Support Mangle Mesa
*/
#cmakedefine FTGLES_SUPPORT_MANGLE_MESA

/*
  Do not use texture fonts (crash on Type1 fonts)
*/
#cmakedefine VTKFTGLES_DO_NOT_USE_TEXTURE_FONT
#if defined(VTKFTGLES_DO_NOT_USE_TEXTURE_FONT) && !defined(FTGLES_DO_NOT_USE_TEXTURE_FONT)
#define FTGLES_DO_NOT_USE_TEXTURE_FONT
#endif

/*
  Do not use vector fonts
*/
#cmakedefine VTKFTGLES_DO_NOT_USE_VECTORISER
#if defined(VTKFTGLES_DO_NOT_USE_VECTORISER) && !defined(FTGLES_DO_NOT_USE_VECTORISER)
#define FTGLES_DO_NOT_USE_VECTORISER
#endif

/* 
   Static or shared lib flags
*/
#cmakedefine VTKFTGLES_DLL
#if defined(VTKFTGLES_DLL) && !defined(FTGLES_LIBRARY)
#define FTGLES_LIBRARY
#endif
#cmakedefine VTKFTGLES_STATIC
#if defined(VTKFTGLES_STATIC) && !defined(FTGLES_LIBRARY_STATIC)
#define FTGLES_LIBRARY_STATIC
#endif

/* 
   Win32 flags
*/
#cmakedefine VTKFTGLES_WIN32_FLAGS
#if defined(VTKFTGLES_WIN32_FLAGS)
#if !defined(USE_STD_NAMESPACE)
#define USE_STD_NAMESPACE
#endif
#if !defined(WIN32)
#define WIN32
#endif
#endif

/* 
   HPUX workaround
*/
#cmakedefine VTKFTGLES_HPUX_SOURCE
#if defined(VTKFTGLES_HPUX_SOURCE) && !defined(_HPUX_SOURCE)
#define _HPUX_SOURCE
#endif

#endif
